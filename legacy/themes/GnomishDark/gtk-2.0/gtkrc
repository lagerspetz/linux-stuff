	GtkEntry::state-hint = 1

	engine "pixmap" # just for similarity to the GTK3 theme
	{
		image
		{
			state           = NORMAL
			function	= FLAT_BOX
			file		= "assets/bg-entry.png"
			border          = {3, 3, 3, 3}
			stretch		= TRUE
		}
		image
		{
			state           = INSENSITIVE
			function	= FLAT_BOX
		}
		image
		{
			#state           = NORMAL
			function	= FLAT_BOX
			file		= "assets/bg-entry.png"
			border          = {3, 3, 3, 3}
			stretch		= TRUE
			overlay_file	= "assets/border-entry.png"
			overlay_border	= {3, 3, 3, 3}
			overlay_stretch	= TRUE
		}
	}
}

